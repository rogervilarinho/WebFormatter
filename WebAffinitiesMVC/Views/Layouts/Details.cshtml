@model WebAffinitiesMVC.Models.LAYOUT

@{
    ViewBag.Title = @String.Concat("Detalhes do layout - ", Model.NOME);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="page-header">
        <h2 id="tables">@String.Concat("Detalhes do layout - ", Model.NOME)</h2>
    </div>
</div>
<div class="container">
    <div class="col-md-12">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NOME)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NOME)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DESCRICAO)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DESCRICAO)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ID_ARQUIVO)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ARQUIVO.NOME)
            </dd>

        </dl>
    </div>
</div>
<div class="container">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Arquivos que utilizam esse layout")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ARQUIVODETALHE)
                {
                    <tr class="active">
                        <td>
                            @Html.DisplayFor(modelItem => item.NOME)
                        </td>
                        <td>
                            @Html.ActionLink("Alterar", "Edit", "ListaDetalhes", new { id = item.ID }, new { @class = "btn btn-primary btn-xs" }) |
                            @Html.ActionLink("Detalhes", "Details", "ListaDetalhes", new { id = item.ID }, new { @class = "btn btn-info btn-xs" }) |
                            @Html.ActionLink("Excluir", "Delete", "ListaDetalhes", new { id = item.ID }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="container">
    <div class="col-md-12">
        <p>
            @Html.ActionLink("Alterar", "Edit", "Layouts", new { id = Model.ID }, new { @class = "btn btn-primary btn-xs" }) |
            @Html.ActionLink("Voltar", "Index", "Layouts", new { idArquivo = Model.ID_ARQUIVO }, new { @class = "btn btn-primary btn-xs" })
        </p>
    </div>
</div>
