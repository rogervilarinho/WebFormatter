@model IEnumerable<WebAffinitiesMVC.Models.LISTADETALHE>

@{
    ViewBag.Title = String.Concat("Valores da Lista ", Model.FirstOrDefault().LISTA.NOME);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <h2 id="tables">@String.Concat("Valores da Lista ", Model.FirstOrDefault().LISTA.NOME)</h2>
    </div>
</div>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="container">
    <div class="col-md-12 col-md-offset-0">
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.VALOR)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!String.IsNullOrEmpty(Model.FirstOrDefault().VALOR))
                    {
                        foreach (var item in Model)
                        {
                            <tr class="active">
                                <td>
                                    @Html.DisplayFor(modelItem => item.VALOR)
                                </td>
                                <td>
                                    @Html.ActionLink("Alterar", "Edit", "ListaDetalhes", new { id = item.ID }, new { @class = "btn btn-primary btn-xs" }) |
                                    @Html.ActionLink("Detalhes", "Details", "ListaDetalhes", new { id = item.ID }, new { @class = "btn btn-info btn-xs" }) |
                                    @Html.ActionLink("Excluir", "Delete", "ListaDetalhes", new { id = item.ID }, new { @class = "btn btn-danger btn-xs" })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            @Html.ActionLink("← Voltar", "Index", "Listas", new { idArquivo = Model.FirstOrDefault().LISTA.ARQUIVO.ID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Novo Valor", "Create", "ListaDetalhes", new { idLista = Model.FirstOrDefault().LISTA.ID }, new { @class = "btn btn-primary btn-sm" })
        </div>
    </div>
</div>
