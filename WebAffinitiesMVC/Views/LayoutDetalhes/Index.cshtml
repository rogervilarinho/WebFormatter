@model IEnumerable<WebAffinitiesMVC.Models.LAYOUTDETALHE>

@{
    ViewBag.Title = String.Concat("Criação de campos - ", Model.FirstOrDefault().LAYOUT.NOME);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <h2 id="tables">@String.Concat("Criação de campos - ", Model.FirstOrDefault().LAYOUT.NOME)</h2>
    </div>
</div>
<div class="container">
    <div class="col-lg-12">
        <div class="row">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.NOME)
                            </small>
                        </th>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.FIXO)
                            </small>
                        </th>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.TAMANHO)
                            </small>
                        </th>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.INICIO)
                            </small>
                        </th>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.FIM)
                            </small>
                        </th>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.OBRIGATORIO)
                            </small>
                        </th>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.ID_TIPO)
                            </small>
                        </th>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.ID_LISTA)
                            </small>
                        </th>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.ID_VALIDACAO)
                            </small>
                        </th>
                        <th>
                            <small>
                                @Html.DisplayNameFor(model => model.ACEITAVEL)
                            </small>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!String.IsNullOrEmpty(Model.FirstOrDefault().NOME))
                    {
                        foreach (var item in Model)
                        {
                            <tr class="active">
                                <td>
                                    <small>
                                        @Html.HiddenFor(modelItem => item.ID_LAYOUT)
                                        @Html.DisplayFor(modelItem => item.NOME)
                                        @*@Html.DisplayFor(modelItem => item.NOME)*@
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.FIXO)
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.TAMANHO)
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.INICIO)
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.FIM)
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.OBRIGATORIO)
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.TIPO.NOME)
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.LISTA.NOME)
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.VALIDACAO.NOME)
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @Html.DisplayFor(modelItem => item.ACEITAVEL)
                                    </small>
                                </td>
                                <td>
                                    @Html.ActionLink("Alterar", "Edit", "LayoutDetalhes", new { id = item.ID }, new { @class = "btn btn-primary btn-xs" }) |
                                    @Html.ActionLink("Excluir", "Delete", "LayoutDetalhes", new { id = item.ID }, new { @class = "btn btn-danger btn-xs" })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            @Html.ActionLink("← Voltar", "Index", "Layouts", new { idArquivo = Model.FirstOrDefault().LAYOUT.ID_ARQUIVO }, new { @class = "btn btn-primary btn-xs" })
            @Html.ActionLink("Novo Campo", "Create", "LayoutDetalhes", new { idLayout = Model.FirstOrDefault().LAYOUT.ID }, new { @class = "btn btn-primary btn-xs" })
        </div>
    </div>
</div>