@model WebAffinitiesMVC.Models.ARQUIVO
@{
    ViewBag.Title = String.Concat("Arquivos tipo ", Model.NOME);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="page-header">
        <h2 id="tables">@String.Concat("Arquivos tipo ", Model.NOME)</h2>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <ul class="nav nav-pills nav-stacked">
                <li class="active">@Html.ActionLink(String.Concat("Arquivo tipo ", Model.NOME), "Index", "ArquivoDetalhes", new { arquivo = Model.ID }, null)</li>
                <li>@Html.ActionLink(String.Concat("Layout tipo ", Model.NOME), "Index", "ArquivoDetalhes", new { arquivo = Model }, null)</li>
                <li>@Html.ActionLink(String.Concat("Lista de valição do tipo ", Model.NOME), "Index", "Listas", new { idArquivo = Model.ID }, null)</li>
            </ul>
        </div>
        <div class="col-lg-9 col-lg-offset-0">
            <div class="row">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ARQUIVODETALHE.FirstOrDefault().NOME)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ARQUIVODETALHE.FirstOrDefault().CRIACAO)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ARQUIVODETALHE.FirstOrDefault().ALTERACAO)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ARQUIVODETALHE)
                        {
                            <tr class="active">
                                <td>
                                    @Html.DisplayFor(modelItem => item.NOME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CRIACAO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ALTERACAO)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                @Html.ActionLink("Novo Arquivo", "Create", "ArquivoDetalhes", new { idArquivo = Model.ID }, new { @class = "btn btn-primary btn-sm" })
            </div>
        </div>
    </div>
</div>
