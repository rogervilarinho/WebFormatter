@model IEnumerable<WebAffinitiesMVC.Models.Arquivo>
@{
    ViewBag.Title = "Lista de Arquivos";
}
<div class="container">
    <div class="page-header">
        <h2 id="tables">Tipos de Arquivos</h2>
    </div>
</div>
<div class="container">
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.descricao)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="active">
                        <td>
                            @Html.DisplayFor(modelItem => item.nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descricao)
                        </td>
                        <td>
                            @Html.ActionLink("Alterar", "Alterar", "Arquivo", new { id = item.id }, new { @class = "btn btn-primary btn-xs" }) |
                            @Html.ActionLink("Detalhes", "Detalhar", "Arquivo", new { id = item.id }, new { @class = "btn btn-info btn-xs" }) |
                            @Html.ActionLink("Excluir", "Excluir", "Arquivo", new { id = item.id }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>