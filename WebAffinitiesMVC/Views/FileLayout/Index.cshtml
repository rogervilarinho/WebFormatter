@model WebAffinitiesMVC.ViewModels.FileLayout
@{
    ViewBag.Title = String.Concat("Validação de Arquivo - ", Model.Layouts.FirstOrDefault().ARQUIVO.NOME);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="page-header">
        <h2 id="tables">@String.Concat("Validação de Arquivo - ", Model.Layouts.FirstOrDefault().ARQUIVO.NOME)</h2>
    </div>
</div>
<div class="container">
    <div class="col-lg-12">
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.LabelFor(model => model.Layouts.FirstOrDefault().ID_ARQUIVO)
                        </th>
                        <th>
                            @Html.LabelFor(model => model.Layouts.FirstOrDefault().NOME, "Layout")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Layouts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ARQUIVO.NOME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOME)
                            </td>
                            <td>
                                @Html.ActionLink("Selecionar Layout", "Edit", "LayoutDetalhes", new { id = item.ID }, new { @class = "btn btn-primary btn-xs" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
